<Window x:Class="AULGK.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="正在处理" Height="150" Width="400" WindowStartupLocation="CenterOwner"
        Background="#2C3E50" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="StatusText" Grid.Row="0" Foreground="White" FontSize="14" Margin="0,0,0,10"/>
        <ProgressBar x:Name="ProgressBar" Grid.Row="1" Height="20" IsIndeterminate="True"/>
    </Grid>
</Window>